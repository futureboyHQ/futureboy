{
  "required": ["action"],
  "properties": {
    "action": {
      "type": "string",
      "pattern": "^(REFRESH|REQUEST_INITIAL|REQUEST_PAGES|REQUEST_MORE)$"
    },
    "query": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "subject": { "type": "string" },
        "author": { "type": "string" }
      },
      "additionalProperties": false
    },
    "pages": {
      "items": { "type": "integer", "minimum": 1 },
      "minItems": 1
    },
    "cached": {
      "type": "object",
      "required": ["index", "pages"],
      "properties": {
        "index": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "pages": {
          "items": { "type": "integer", "minimum": 1 },
          "minItems": 1
        }
      }
    }
  },
  "additionalProperties": false
}
