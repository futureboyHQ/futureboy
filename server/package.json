{
  "name": "futureboyhq",
  "version": "1.0.0",
  "description": "FutureboyHQ Official Website",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "better-npm-run compile",
    "compile:dev": "better-npm-run compile",
    "lint": "eslint src test",
    "lint:fix": "npm run lint -- --fix",
    "start": "better-npm-run start",
    "dev": "better-npm-run dev",
    "test": "better-npm-run test",
    "test:dev": "npm run test -- --watch",
    "deploy": "better-npm-run deploy",
    "deploy:dev": "better-npm-run deploy:dev",
    "deploy:prod": "better-npm-run deploy:prod",
    "codecov": "cat coverage/*/lcov.info | codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/futureboyHQ/website.git"
  },
  "keywords": [
    "futureboy"
  ],
  "author": "futureboyHQ",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/futureboyHQ/website/issues"
  },
  "betterScripts": {
    "compile": {
      "command": "babel src -d dist"
    },
    "compile:dev": {
      "command": "babel src -d dist -s"
    },
    "dev": {
      "command": "npm run deploy:dev",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "deploy": {
      "command": "npm run clean && npm run lint && npm run test && npm run clean && npm run compile",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "deploy:dev": {
      "command": "npm run clean && npm run lint && npm run compile:dev && nodemon dist/server.js --watch src --ignore coverage --ignore tests ",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "deploy:prod": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "start": {
      "command": "npm run deploy",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "test": {
      "command": "mocha ./test/test.js",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    }
  },
  "homepage": "www.futureboyhq.com",
  "dependencies": {
    "ajv": "4.11.6",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "better-npm-run": "^0.0.15",
    "body-parser": "1.15.2",
    "chokidar": "1.6.1",
    "co": "4.6.0",
    "consolidate": "0.14.5",
    "express": "4.14.0",
    "ip": "1.1.5",
    "js-yaml": "3.8.3",
    "mongo-sanitize": "1.0.0",
    "mongodb": "2.2.26",
    "mongoose": "4.9.5",
    "mustache": "2.3.0",
    "node-uuid": "1.4.8",
    "nodemailer": "4.0.1",
    "nodemailer-mailgun-transport": "1.3.4",
    "rimraf": "^2.6.1",
    "validator": "6.2.0"
  },
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-config-standard-react": "^4.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-react": "^6.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "inquirer": "1.2.2",
    "nodemon": "^1.11.0",
    "should": "^11.1.1",
    "supertest": "^2.0.0"
  }
}
