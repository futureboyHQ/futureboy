{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
      "standard",
      "standard-react"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "globals": {
      "__DEV__"      : false,
      "__TEST__"     : false,
      "__PROD__"     : false,
      "__COVERAGE__" : false
    },
    "rules": {
        "indent": ["warn", 2],
        "keyword-spacing": ["error", {
          "before": false,
          "after": false,
          "overrides": {
            "from": {"after": true, "before": true},
            "function": {"after": true, "before": true},
            "import": {"after": true},
            "return": {"after": true}
          }
        }],
        "space-before-blocks": [0, "never"],
        "no-multiple-empty-lines": 0,
        "space-before-function-paren": 0,
        "camelcase": 0,
        "jsx-quotes": [2, "prefer-single"],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"],
        "no-unused-vars": ["warn"],
        "no-console": "off"
    }
}
